pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from SCM
                 checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                // Set up Python environment (e.g., using virtualenv)
                sh '''
                    hostname
                    ls
                    dir
                    python3 -m venv venv
                    source venv/bin/activate
                    pip3 install -r requirements.txt
                '''
               // Run your Python script
               sh 'python3 your_script.py'
           }
        }
  }
}
